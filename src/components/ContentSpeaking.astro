                    clickedButton.classList.add('active');
                    clickedButton.classList.remove('bg-black');
                    clickedButton.classList.add('bg-primary');
                }
                
                let visibleCount = 0;
                
                // Filter cards
                speakingCards.forEach(card => {
                    const cardTags = card.dataset.tags ? card.dataset.tags.split(',') : [];
                    const shouldShow = selectedTag === 'all' || cardTags.includes(selectedTag);
                    
                    card.style.display = shouldShow ? 'flex' : 'none';
                    if (shouldShow) visibleCount++;
                });
                
                // Show/hide "no results" message
                noResults.classList.toggle('hidden', visibleCount > 0);
                
                // Hide section-specific "no results" messages
                document.getElementById('no-upcoming-results').classList.add('hidden');
                document.getElementById('no-past-results').classList.add('hidden');
            };
            
            // Set up event listeners
            tagButtons.forEach(button => {
                button.addEventListener('click', () => {
                    filterByTag(button.dataset.tag);
                });
            });
            
