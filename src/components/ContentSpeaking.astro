// Sort engagements: upcoming first (by date), then past (by date, most recent first)
const sortedEngagements = [...speakingEngagements].sort((a, b) => {
    // First sort by status (upcoming before past)
    if (a.status !== b.status) {
        return a.status === 'upcoming' ? -1 : 1;
    }
    
    // For same status, sort by date
    const dateA = new Date(a.date.split('-')[0]);
    const dateB = new Date(a.date.split('-')[0]);
    
    // Upcoming: ascending (nearest first)
    // Past: descending (most recent first)
    return a.status === 'upcoming' 
        ? dateA.getTime() - dateB.getTime() 
        : dateB.getTime() - dateA.getTime();
});

// Extract all unique tags
const allTags = [...new Set(
    speakingEngagements
        .flatMap(engagement => engagement.tags || [])
        .sort()
)];

// Group common tags by category for better organization
const tagCategories = {
    topics: ['go', 'devops', 'terraform', 'azure', 'burnout', 'well-being', 'mental health', 'diversity', 'inclusion', 'leadership', 'open source', 'community', 'devrel', 'developer relations'],
    formats: ['keynote', 'panel', 'podcast', 'workshop', 'interview'],
    skills: ['programming', 'development', 'best practices', 'advocacy', 'mentorship']
};

// Get remaining tags that don't fit into categories
const uncategorizedTags = allTags.filter(tag => 
    !Object.values(tagCategories).flat().includes(tag)
);
